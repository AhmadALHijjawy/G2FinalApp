<!-- Latest blog -->
<section id="aa-latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-latest-blog-area">
                    <div class="aa-title">
                        <h2>Latest Blog</h2>
                        <span></span>
                        <p>Blogs</p>
                    </div>
                    <div class="aa-latest-blog-content">
                        <div class="row">
                            <!-- start single blog -->
                            @foreach (Blog item in ViewBag.blogs)
                            {
                                <div class="col-md-4">
                                    <article class="aa-blog-single">
                                        <figure class="aa-blog-img">
                                            <a href="#"><img src="@Url.Content(item.BlogImg)" alt="img"></a>
                                            <span class="aa-date-tag">15 April, 16</span>
                                        </figure>
                                        <div class="aa-blog-single-content">
                                            <h3><a href="#">Lorem ipsum dolor sit amet, consectetur.</a></h3>
                                            <p>@item.BlogDesc.Substring(0, 10) ...</p>
                                            <div class="aa-blog-single-bottom">
                                                <a href="#" class="aa-blog-author"><i class="fa fa-user"></i> Read More</a>
                                                <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                                            </div>
                                        </div>

                                    </article>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Latest blog -->
<!-- Our Agent Section-->
<section id="aa-agents">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-agents-area">
                    <div class="aa-title">
